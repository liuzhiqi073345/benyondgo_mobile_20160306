</header>
<!-- #BeginLibraryItem "/library/up_menu.lbi" --><!-- #EndLibraryItem --> <!--弹出菜单-->

<form  method="post" action="user.php?act=my_comment_send" onsubmit="return validate_comment()">
  <input type="hidden" value="{$goods_id}" name="goods_id">
  <input type="hidden" value="{$rec_id}" name="rec_id">
  <input type="hidden" name="o_id" value="{$order_id}" />
  <div class="pj">
    <dl>
      <dt><a href='goods.php?id={$goods.goods_id}'><img src="./../{$goods.goods_thumb}" width="50"/></a></dt>
      <dd>
        <p><a href='goods.php?id={$goods.goods_id}'>{$goods.goods_name|truncate:35}</a></p>
        <span>{$goods.supplier_name}</span> </dd>
    </dl>
    <div class="pingfen"> 
      <script type="text/javascript">
$(document).ready(function(){
 $(".jsstar li").mouseover(function(){
        $(this).parent().find("li").css({"background-position":"left top"});
        for(var i=0; i<$(this).attr("title"); i++){
        $(this).parent().find("li").eq(i).css({"background-position":"left bottom"});
       }
    });

 $(".jsstar li").mouseout(function(){
    $(this).parent().find("li").css({"background-position":"left top"});
     for(var i=0; i<$(this).parent().find("input").val(); i++){
        $(this).parent().find("li").eq(i).css({"background-position":"left bottom"});
    }
});

$(".jsstar li").click(function(){
    $(this).parent().find("input").val($(this).attr("title"));
    $(this).parent().find("span").html($(this).attr("title")+"星");
    });
});
</script>
      <h2>评分:</h2>
      <ul>
        <li>描述：</li>
        <ul class="jsstar" style=" width:80%">
          <span></span>
          <input id="comment_rank" name="comment_rank" value="0" type="hidden">
          <li  title="1"></li>
          <li  title="2"></li>
          <li  title="3"></li>
          <li  title="4"></li>
          <li  title="5"></li>
        </ul>
      </ul>
      <ul>
        <li>服务：</li>
        <ul class="jsstar" style=" width:80%">
          <span></span>
          <input id="server" name="server" value="0" type="hidden">
          <li title="1"></li>
          <li title="2"></li>
          <li title="3"></li>
          <li title="4"></li>
          <li title="5"></li>
        </ul>
      </ul>
      <ul>
        <li>发货：</li>
        <ul class="jsstar" style=" width:80%">
          <span></span>
          <input id="send" name="send" value="0" type="hidden">
          <li title="1"></li>
          <li title="2"></li>
          <li title="3"></li>
          <li title="4"></li>
          <li  title="5"></li>
        </ul>
      </ul>
      <ul>
        <li>物流：</li>
        <ul class="jsstar" style=" width:80%">
          <span></span>
          <input id="shipping" name="shipping" value="0" type="hidden">
          <li title="1"></li>
          <li title="2"></li>
          <li title="3"></li>
          <li title="4"></li>
          <li title="5"></li>
        </ul>
      </ul>
    </div>
    <div class="p_main"> <span style=" display:block; width:100%; overflow:hidden">
      <textarea id="content_13" class="inputBorder" style="height:48px;" name="content"></textarea>
      </span> <span style=" display:block; width:90%; overflow:hidden; margin:auto; margin-bottom:20px; margin-top:20px;">
      <input name="" type="submit" value="提交" class="m_pingjia" />
      </span> </div>
  </div>
  <!--评分 start-->
  
</form>
</body>
<script>
function validate_comment()
{
	var comment_rank = document.getElementById("comment_rank").value;
	var server = document.getElementById("server").value;
	var send = document.getElementById("send").value;
	var shipping = document.getElementById("shipping").value;
	var content = document.getElementById("content_13").value;

	if(comment_rank == '' || comment_rank == '0'){
		alert("请为描述评分!");
		return false;
	}
	else if(server == '' || server == '0'){
		alert("请为服务评分!");
		return false;
	}
	else if(send == '' || send == '0'){
		alert("请为发货评分!");
		return false;
	}
	else if(shipping == '' || shipping == '0'){
		alert("请为物流评分!");
		return false;
	}
	else if(content == ''){
		alert("评价内容不能为空!");
		return false;
	}
	else
	{
		return true;
	}
}
</script>
</html>