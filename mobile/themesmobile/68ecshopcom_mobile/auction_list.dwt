<!DOCTYPE html >
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width">
<title>{$page_title}</title>
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>
<link rel="stylesheet" type="text/css" href="themesmobile/68ecshopcom_mobile/css/public.css">
<link rel="stylesheet" type="text/css" href="themesmobile/68ecshopcom_mobile/css/group_buy.css">
<link rel="stylesheet" href="themesmobile/68ecshopcom_mobile/css/auction.css">
<script type="text/javascript" src="themesmobile/68ecshopcom_mobile/js/jquery.js"></script>
<script type="text/javascript" src="themesmobile/68ecshopcom_mobile/js/TouchSlide.1.1.js"></script>
{* 包含脚本文件 *}
{insert_scripts files='jquery.json.js,transport.js'}
{insert_scripts files='common.js'}
</head>
<body>
<!-- 头部 start -->
<header class="header">
  <div class="tab_nav">
    <div class="header">
      <div class="h-left"><a class="sb-back" href="javascript:history.back(-1)" title="返回"></a></div>
      <div class="h-mid">拍卖</div>
      <div class="h-right">
        <aside class="top_bar">
          <div onClick="show_menu();$('#close_btn').addClass('hid');" id="show_more"><a href="javascript:;"></a> </div>
        </aside>
      </div>
    </div>
  </div>
</header>
<!-- #BeginLibraryItem "/library/up_menu.lbi" --><!-- #EndLibraryItem --> <!--弹出菜单--> 
<!--  头部 end -->
<div id="scrollimg" class="scrollimg">
  <div class="bd">
    <ul>
      {foreach from=$wap_auction_ad item=ad name=wap_auction_ad}
      <li><a href="{$ad.url}"><img src="../{$ad.image}" width="100%" /></a></li>
      {/foreach}
    </ul>
  </div>
  <div class="hd">
    <ul>
    </ul>
  </div>
</div>
<script type="text/javascript">
	TouchSlide({ 
		slideCell:"#scrollimg",
		titCell:".hd ul", //开启自动分页 autoPage:true ，此时设置 titCell 为导航元素包裹层
		mainCell:".bd ul", 
		effect:"leftLoop", 
		autoPage:true,//自动分页
		autoPlay:true //自动播放
	});
</script>
<div id="tbh5v0">
  <section class="innercontent"> 
    <!-- {if $auction_list} 如果有拍卖活动 --> 
<script>
<!--
/*第一种形式 第二种形式 更换显示样式*/
function setTabCatGoods(name,cursel,n){
for(i=1;i<=n;i++){
var menu=document.getElementById(name+i);
var con=document.getElementById("con_"+name+"_"+i);
con.style.display=i==cursel?"block":"none";
menu.className=i==cursel?"curr":"";
}
}
//-->
</script>
    <div class="main">
      <div class="tab">
        <div class="tab_tit">
          <ul>
            <li class="curr" id="goods1" onclick="setTabCatGoods('goods',1,3)">正在进行</li>
            <li id="goods2" onclick="setTabCatGoods('goods',2,3)">即将开始</li>
            <li id="goods3" onclick="setTabCatGoods('goods',3,3)">已经结束</li>
          </ul>
        </div>
        <div class="tab_con">
          <div id="con_goods_1">
            <ul>
              <!-- {foreach from=$auction_list item=auction name=name} --> 
              <!-- {if $auction.check_time eq 0 && $auction.c_0 && $auction.imgfile_c neq ''} -->
              <li>
                <div class="con_top"> <span class="count"><font>{$auction.act_count}</font><br/>
                  次出价</span> <a href="{$auction.url}"><img src="../../{$auction.act_imgfile}" /></a> </div>
                <div class="con_bottom">
                  <p class="name"><a href="{$auction.url}">{$auction.goods_name}</a></p>
                  <p>{$lang.act_status}： 
                    <!-- {if $auction.status_no eq 0} --> 
                    {$lang.au_pre_start} 
                    <!-- {elseif $auction.status_no eq 1} --> 
                    {$lang.au_under_way_1} 
                    <!-- {else} --> 
                    {$lang.au_finished} 
                    <!-- {/if} --> 
                  </p>
                  <p>{$lang.au_start_price}：{$auction.formated_start_price}</p>
                  <!-- {if $auction.end_price gt 0} -->
                  <p>{$lang.au_end_price}：{$auction.formated_end_price}</p>
                  <!-- {/if} --> 
                </div>
              </li>
              <!-- {/if} --> 
              <!--{/foreach}-->
            </ul>
          </div>
          <div class="mc " id="con_goods_2">
            <ul>
              <!-- {foreach from=$auction_list item=auction name=name} --> 
              <!-- {if $auction.check_time eq 1 && $auction.c_1 && $auction.imgfile_c neq ''} -->
              <li>
                <div class="con_top"> <span class="count"><font>{$auction.act_count}</font><br/>
                  次出价</span> <a href="{$auction.url}"><img src="../../{$auction.act_imgfile}"  /></a> </div>
                <div class="con_bottom">
                  <p class="name"><a href="{$auction.url}">{$auction.goods_name}</a></p>
                  <p>{$lang.act_status}： 
                    <!-- {if $auction.status_no eq 0} --> 
                    {$lang.au_pre_start} 
                    <!-- {elseif $auction.status_no eq 1} --> 
                    {$lang.au_under_way_1} 
                    <!-- {else} --> 
                    {$lang.au_finished} 
                    <!-- {/if} --> 
                  </p>
                  <p>{$lang.au_start_price}：{$auction.formated_start_price}</p>
                  <!-- {if $auction.end_price gt 0} -->
                  <p>{$lang.au_end_price}：{$auction.formated_end_price}</p>
                  <!-- {/if} --> 
                </div>
              </li>
              <!-- {/if} --> 
              <!--{/foreach}-->
            </ul>
          </div>
          <div class="mc " id="con_goods_3">
            <ul>
              <!-- {foreach from=$auction_list item=auction name=name} --> 
              <!-- {if $auction.check_time eq 2 && $auction.c_2 && $auction.imgfile_c neq ''} -->
              <li>
                <div class="con_top"> <span class="count"><font>{$auction.act_count}</font><br/>
                  次出价</span> <a href="{$auction.url}"><img src="../../{$auction.act_imgfile}"  /></a> </div>
                <div class="con_bottom">
                  <p class="name"><a href="{$auction.url}">{$auction.goods_name}</a></p>
                  <p>{$lang.act_status}： 
                    <!-- {if $auction.status_no eq 0} --> 
                    {$lang.au_pre_start} 
                    <!-- {elseif $auction.status_no eq 1} --> 
                    {$lang.au_under_way_1} 
                    <!-- {else} --> 
                    {$lang.au_finished} 
                    <!-- {/if} --> 
                  </p>
                  <p>{$lang.au_start_price}：{$auction.formated_start_price}</p>
                  <!-- {if $auction.end_price gt 0} -->
                  <p>{$lang.au_end_price}：{$auction.formated_end_price}</p>
                  <!-- {/if} --> 
                </div>
              </li>
              <!-- {/if} --> 
              <!--{/foreach}-->
            </ul>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      <!--{if $auction_list_hot}-->
      <h3 class="sg_box_tit">今日热拍</h3>
      <ul class="product_list" id="good_list">
        <!-- {foreach from=$auction_list_hot item=auction name=name} --> 
		<!-- {if $smarty.foreach.name.iteration lt 5 && $auction.check_time eq 0} -->
        <li> <a class="url" href="{$auction.url}" target="_blank"> <img src="../../{$auction.goods_img}"> </a><a href="{$auction.url}"  class="info_wrap">
          <div class="fn good">{$auction.goods_name|truncate:20}</div>
          <div class="price_wrap"><span>当前价：</span><strong>{$auction.formated_current_price}</strong></div>
          </a>
        	<div class="p-count"><i></i><strong>{$auction.act_count}次</strong></div>
        </li>
        <!-- {/if} --> 
		<!-- {/foreach} -->
        
      </ul>
      <!-- {/if} -->
      <h3 class="sg_box_tit">全部拍卖</h3>
      <div class="layout_list">
        <ul class="clearfix">
          <!-- {foreach from=$auction_list item=auction name=name} 循环拍卖活动开始 -->
          <li {if $smarty.foreach.name.iteration mod 2 eq 1}class="layout_list_1"{/if}>
          	<a href="{$auction.url}" class="layout_pic"><img class="err-product" src="../../{$auction.goods_img}" ></a>
          	<div class="layout_cont">
            	<a class="layout_name" href="{$auction.url}">{$auction.goods_name|truncate:26}</a>
          		<div class="layout_price">
                	<span>当前价:<em>{$auction.formated_current_price}</em></span>
                    
                     {if $auction.status_no eq 0} <a href="{$auction.url}" class="bid_btn bid_btn1">即将开始</a> {elseif $auction.status_no eq 1} <a href="{$auction.url}" class="bid_btn2">我要出价</a> {else} <a href="{$auction.url}" class="bid_btn bid_btn3">已经结束</a> {/if}
          		</div>
         	</div>
          </li>
          <!--{/foreach}-->
        </ul>
       </div>
    </div>
    <!-- {/if} --> 
  </section>
</div>
<!-- #BeginLibraryItem "/library/page_footer.lbi" --><!-- #EndLibraryItem --> <!-- #BeginLibraryItem "/library/footer_nav.lbi" --><!-- #EndLibraryItem -->
</body>
</html>
