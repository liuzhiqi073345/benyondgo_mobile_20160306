<!--{if $action eq 'query_kuaidi'} 快递状态查询-->
<div class="wuliu">
  <div class="wuliu-right">
    <div class="mc">
      <form action="#" method="post" name="theForm" id="theForm" >
      <div class="wyjj_mc">
          <div class="wyjj_xx1 wyjj_xx_t">
          	<h4>寄件查询结果</h4>
        	<div style="padding:35px ;">
            	<input type="text" name="order_sn"  class="wyjj_input wyjj_input2" value="请每次输入1个运单号查询"  onfocus="if (this.value =='请每次输入1个运单号查询'){this.value ='';}" onblur="if (value ==''){value='请每次输入1个运单号查询';}"  />
          		<div class="mt10">
            		<input type="text" name="captcha" value="" class="wyjj_input wyjj_input_t" />
            		<img src="captcha.php?{$rand}" alt="captcha" class="dsb cur" style="vertical-align: middle;cursor: pointer;margin-left:10px" onClick="this.src='captcha.php?'+Math.random()" title="点击刷新" /> 
                </div>
                <div class="mt10">
          			<a class="wuliu_btn" href="javascript:void(0);" onclick="get_OrderStatus();" id="search_1" title="查询" style="width: 28px;">查询</a>
                </div>
          <div class="clear"></div>
          <div class="fcf33 mt10" id="left-alert" style="height:auto;overflow:hidden;"> </div>
        </div>
          </div>
      </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript">
function get_OrderStatus()
{
	var theForm = document.forms['theForm'];
	var msg = new Array();
	var err = false; 
	if (theForm.elements['order_sn'].value == '' || theForm.elements['order_sn'].value == '请每次输入1个运单号查询' )
	{
		err = true;
		msg.push("运单号不能为空！");
	}
	if (theForm.elements['captcha'].value == '' )
	{
		err = true;
		msg.push("验证码不能为空！");
	}
	if (err)
	{
		message = msg.join("\n");
		alert(message);
	}
	else
	{	
		var order        = new Object();
		order.order_sn = theForm.elements['order_sn'].value;
		order.captcha = theForm.elements['captcha'].value;
		Ajax.call('kuaidi.php?act=get_OrderStatus', 'order=' +  $.toJSON(order), get_OrderStatus_Response, 'POST', 'JSON');
	}
}
function get_OrderStatus_Response(result)
{
	if (result.error)
	{
		alert(result.message);
	}
	else
	{
		//alert(result.content);
		document.getElementById('left-alert').innerHTML= result.content;
	}
}
</script> 
<!--{/if}--> 

{* 运费查询_start *} 
<!--{if $action eq 'query_cost'} 运费查询-->

<div class="wuliu">
  <div class="wuliu-right">
    <form action="#" method="post" name="send_form" id="send_form" >
      <div class="mc">
        <div class="wyjj_mc">
          <div class="wyjj_xx1 wyjj_xx_t">
            <h4>发件人地址</h4>
            <dl>
              <dt><b>*</b> 区域：</dt>
              <dd>
                <select name="send_region_id" class="wyjj_input">
                  
	      {foreach from=$district_list name="diqu_list" item=district}
               
                  <option value="{$district.region_id}">{$district.region_name}</option>
                  
               {/foreach}
              
                </select>
              </dd>
            </dl>
          </div>
          <div class="clear"></div>
          <div class="wyjj_xx1 wyjj_xx_t">
            <h4>收件人地址</h4>
            <dl>
              <dt><b>*</b> 区域：</dt>
              <dd>
                <select name="to_region_id" class="wyjj_input" onchange="get_ShippingFee(document.getElementById('goods_weight_input'));" >
                  
                {foreach from=$district_list item=district}
               
                  <option value="{$district.region_id}">{$district.region_name}</option>
                  
               {/foreach}
              
                </select>
              </dd>
            </dl>
          </div>
          <div class="clear"></div>
          <div class="wyjj_xx2 wyjj_xx_t">
            <h4>物品信息</h4>
            <dl>
              <dt><b>*</b>物品重量：</dt>
              <dd>
                <input name="goods_weight" id="goods_weight_input" type="text" class="wyjj_input wyjj_input_t" onkeyup="this.value=this.value.replace(/[^\d^\.]/g,'');get_ShippingFee(this);" onafterpaste="this.value=this.value.replace(/[^\d^\.]/g,'')" >
                <span class="ml10">千克</span>
                <div class="msg mt5 fcf33 fl"></div>
              </dd>
            </dl>
            <dl>
              <dt>运费计算：</dt>
              <dd>
                <input name="money" id="money" type="text" class="wyjj_input wyjj_input_t" readonly="readonly">
                <input type="hidden" name="country" value="{$shop_country}">
                <input type="hidden" name="province" value="{$shop_province}">
                <input type="hidden" name="city" value="{$shop_city}">
                <span class="ml5">元</span>
              </dd>
            </dl>
            <div class="clear"></div>
          </div>
          <div class="clear"></div>
          <div class="wuliu_newbtn_sub"> 
          	<a href="kuaidi.php" class=" wuliu_newbtn mr10">我要寄件</a> 
            <a href="index.php" class=" wuliu_newbtn">返回首页</a> 
          </div>
          <div class="clear"></div>
        </div>
        <div class="clear"></div>
      </div>
    </form>
  </div>
</div>
<div class="clear pb10"></div>
<script type="text/javascript">
function  get_ShippingFee(theobj)
{  
    var sendform      = document.forms['send_form'];
    var goods        = new Object();   
    goods.goods_weight = theobj.value;
    goods.country = sendform.elements['country'].value;
    goods.province = sendform.elements['province'].value;
    goods.city = sendform.elements['city'].value;
    goods.district = sendform.elements['to_region_id'].value;		
    Ajax.call('kuaidi.php?act=get_shipping_fee', 'goods=' + $.toJSON(goods), get_ShippingFee_Response, 'POST', 'JSON');		
}
function  get_ShippingFee_Response(result)
{
	document.getElementById('money').value=result.content;
}
</script> 
